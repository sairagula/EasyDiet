<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/background_material_v2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/navigation_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation_email"
        android:layout_marginLeft="24dp"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:text="Example User"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/navigation_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/navigation_username"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/navigation_username"
        android:layout_marginBottom="8dp"
        android:gravity="left"
        android:text="abdukhalieva@gmail.com"
        android:textColor="#fff"
        android:textSize="14sp" />

</RelativeLayout>