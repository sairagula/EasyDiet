<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:id="@+id/weightInCardId"
        style="@style/MyCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/weightInTextId"
                style="@style/MyTextStyle"
                android:layout_alignParentTop="true"
                android:text="@string/check_in_action_item_text" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/actions_weight_in_button"
                style="@style/MyFlatButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/weightInTextId"
                android:layout_marginLeft="@dimen/view_inside_viewcard_margin"
                android:layout_marginRight="@dimen/view_inside_viewcard_margin"
                android:text="@string/check_in_button" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>