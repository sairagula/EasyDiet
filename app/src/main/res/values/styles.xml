<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <style name="MyCustomAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">@color/blueAccentColor</item>
    </style>

    <style name="MyInversedTheme" parent="MyCustomAppTheme">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/textColor</item>
        <!-- Used for the background -->
        <item name="android:background">@color/greyBackground</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">#4CAF50</item>
    </style>

    <style name="MyActionBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="MyCardViewStyle">
        <item name="cardElevation">3dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="ArcViewStyle">
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="MyFlatButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingBottom">@dimen/view_inside_viewcard_margin</item>
        <item name="android:paddingTop">@dimen/view_inside_viewcard_margin</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyFlatButtonInversed" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingBottom">@dimen/view_inside_viewcard_margin</item>
        <item name="android:paddingTop">@dimen/view_inside_viewcard_margin</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTransparenButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/blueButtonColor</item>
    </style>

    <style name="MyTextStyle" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginLeft">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginRight">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginTop">@dimen/view_inside_viewcard_margin</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#8BC34A</item>
    </style>

    <style name="ChallengeSubjectStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginLeft">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginRight">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginTop">@dimen/view_inside_viewcard_margin</item>
    </style>

    <style name="BubbleTextStyle" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginRight">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="RibbonStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginRight">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyFabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/fab_compat_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_compat_margin</item>
        <item name="android:src">@drawable/scale_bathroom_white</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@color/primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="layout_behavior">com.akzholus.easydiet.third_party.ScrollAwareFABBehavior</item>
    </style>

    <style name="MyFragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/greyBackground</item>
        <item name="android:paddingLeft">@dimen/card_view_side_margins</item>
        <item name="android:paddingRight">@dimen/card_view_side_margins</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="MyActiveGoalProgressStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">@dimen/view_inside_viewcard_margin</item>
        <item name="android:layout_marginRight">@dimen/view_inside_viewcard_margin</item>
    </style>

    <style name="WelcomeLogoImageStyle">
        <item name="android:layout_width">@dimen/welcome_logo_dimen</item>
        <item name="android:layout_height">@dimen/welcome_logo_dimen</item>
        <item name="android:layout_marginTop">@dimen/welcome_logo_to_margin</item>
        <item name="android:contentDescription">logo image</item>
    </style>

    <style name="WelcomePageAppName">
        <item name="android:textSize">48sp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <!-- *******************************************************
                CREATE GOAL WIZARD
    *******************************************************-->
    <!-- Step banner styles -->
    <style name="WizardBannerTextStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/wizard_horizontal_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="WizardBannerContainerStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/bannerColorGoalCreation</item>
    </style>

    <!-- Step header styles -->
    <style name="WizardHeaderTextStyle" parent="WizardBannerTextStyle">
        <item name="android:layout_marginBottom">@dimen/wizard_horizontal_margin</item>
        <item name="android:layout_gravity">left|bottom</item>
    </style>

    <style name="WizardHeaderContainerStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">8</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!-- Step body styles -->
    <style name="WizardBodyContainerStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">13</item>
        <item name="android:background">@color/greyBackground</item>
        <item name="android:paddingLeft">@dimen/wizard_steps_padding</item>
        <item name="android:paddingRight">@dimen/wizard_steps_padding</item>
    </style>

    <!-- label text styles -->
    <style name="WizardBodyTextStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/wizard_form_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="WizardBodyTextStyleWhite" parent="WizardBodyTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WizardBodyTextStyleBlack" parent="WizardBodyTextStyle">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="WizardBodyTextStyleDisclaimer" parent="WizardBodyTextStyle">
        <item name="android:textColor">@color/disclaimerColor</item>
        <item name="android:textSize">@dimen/wizard_form_disclaimer_text_size</item>
    </style>

    <style name="MyWizardTheme" parent="MyCustomAppTheme">
        <item name="colorAccent">@color/primary</item>
    </style>

    <!-- Input styles -->
    <style name="WizardBodyShortEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/wizard_form_text_size</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/editTextHintColor</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:theme">@style/MyWizardTheme</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WizardBodyFullEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/wizard_form_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/editTextHintColorDesigned</item>
        <item name="android:theme">@style/MyWizardTheme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GoalWizard.FloatingHintStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary</item>

    </style>

    <!-- *******************************************************
                WEIGHT-IN DIALOG
    *******************************************************-->
    <style name="WeightInDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="WeightInBodyTextStyleWhite" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SurveyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:theme">@style/MyInversedTheme</item>
        <item name="android:textAppearance">@style/WeightInBodyTextStyleWhite</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RedSendFABStyle" parent="MyFabStyle">
        <item name="android:src">@drawable/scale_bathroom_white</item>
        <item name="rippleColor">@color/redAccent</item>
        <item name="backgroundTint">@color/redAccent</item>

    </style>

</resources>